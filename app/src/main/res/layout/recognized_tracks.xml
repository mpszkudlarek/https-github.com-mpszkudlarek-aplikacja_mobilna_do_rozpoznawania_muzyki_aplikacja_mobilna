<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"

    tools:context=".RecognizedTracksActivity">


    <ImageView
        android:id="@+id/icon_left_recognized_tracks"
        android:layout_width="73dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="27dp"
        android:contentDescription="@null"
        android:paddingTop="0dp"
        android:src="@drawable/icon_account_circle" />

    <ImageView
        android:id="@+id/icon_right_recognized_tracks"
        android:layout_width="73dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="33dp"
        android:contentDescription="@null"
        android:paddingTop="0dp"
        android:src="@drawable/exit_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="100dp"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/comforta_bold"
            android:text="Recognized track is:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="start"
            android:text="Album: 2001"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/track_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="start"
            android:text="Artist: Dr. Dre"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/track_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="start"
            android:text="Genre: Hip-hop "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/track_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="start"
            android:text="Release year: 1999"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/track_release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="start"
            android:text="title: Still D.R.E. (feat. Snoop Dogg)"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!--        <Button-->
